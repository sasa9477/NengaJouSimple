<UserControl x:Class="NengaJouSimple.Views.Components.PrintDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vmc="clr-namespace:NengaJouSimple.ViewModels.Components"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             Width="500" Height="250"
             d:DataContext="{d:DesignInstance Type={x:Type vmc:PrintDialogViewModel}}">

    <prism:Dialog.WindowStyle>
        <Style TargetType="{x:Type Window}">
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.ColumnSpan="4"
            Text="{Binding Message}"/>

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="印刷位置がズレている場合"
            Visibility="{Binding IsVisibleChangePrintingLocationHelperDialogShowButton, Converter={StaticResource BooleanToVisibilityConverter}}"
            Command="{Binding ShowChangePrintingLocationHelperDialogCommand}"/>

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Content="キャンセル"
            Command="{Binding CloseDialogCommand}"
            CommandParameter="false"/>

        <Button
            Grid.Row="1"
            Grid.Column="3"
            Content="印刷"
            IsDefault="True"
            Command="{Binding PrintCommand}"/>
    </Grid>
</UserControl>

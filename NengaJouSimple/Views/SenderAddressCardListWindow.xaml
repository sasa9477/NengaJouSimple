<Window x:Class="NengaJouSimple.Views.SenderAddressCardListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:NengaJouSimple.Views"
        xmlns:vm="clr-namespace:NengaJouSimple.ViewModels"
        xmlns:vc="clr-namespace:NengaJouSimple.Views.Components"
        mc:Ignorable="d"
        prism:ViewModelLocator.AutoWireViewModel="True"
        d:DataContext="{d:DesignInstance Type={x:Type vm:SenderAddressCardListWindowViewModel}}"
        Title="差出人登録画面"
        Height="720" Width="1280">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label
                Content="差出人一覧"
                FontSize="24"/>
            <ListView
                Grid.Row="1"
                x:Name="DataListView"
                ItemsSource="{Binding SenderAddressCards}"
                SelectedItem="{Binding SelectedSenderAddressCard}"
                SelectionMode="Single"
                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="氏名" DisplayMemberBinding="{Binding MainName}" Width="100"/>
                        <GridViewColumn Header="フリガナ" DisplayMemberBinding="{Binding MainNameKana}" Width="100"/>
                        <GridViewColumn Header="郵便番号" DisplayMemberBinding="{Binding AddressNumber}" Width="70"/>
                        <GridViewColumn Header="住所" DisplayMemberBinding="{Binding Address}" Width="300"/>
                        <GridViewColumn Header="連名１" DisplayMemberBinding="{Binding Renmei1}" Width="Auto"/>
                        <GridViewColumn Header="連名２" DisplayMemberBinding="{Binding Renmei2}" Width="Auto"/>
                        <GridViewColumn Header="連名３" DisplayMemberBinding="{Binding Renmei3}" Width="Auto"/>
                        <GridViewColumn Header="連名４" DisplayMemberBinding="{Binding Renmei4}" Width="Auto"/>
                        <GridViewColumn Header="連名５" DisplayMemberBinding="{Binding Renmei5}" Width="Auto"/>
                    </GridView>
                </ListView.View>
                <bh:Interaction.Triggers>
                    <bh:EventTrigger EventName="SelectionChanged">
                        <bh:InvokeCommandAction Command="{Binding SelectAddressCardCommand}"/>
                    </bh:EventTrigger>
                </bh:Interaction.Triggers>
            </ListView>
        </Grid>

        <Grid
            Grid.Column="1"
            Width="405"
            Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label
                    Content="差出人カード登録"
                    FontSize="24"/>
                <Button
                    Grid.Column="1"
                    Content="新規登録"
                    Command="{Binding ClearSelectedAddressCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource LargeButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSearchingByWebService}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <bh:Interaction.Triggers>
                        <bh:EventTrigger EventName="Click">
                            <bh:ChangePropertyAction
                            TargetName="DataListView"
                            PropertyName="SelectedIndex"
                            Value="-1"/>
                        </bh:EventTrigger>
                    </bh:Interaction.Triggers>
                </Button>
            </Grid>
            <Border
                Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1">
                <vc:SenderAddressCardControl
                    AddressCard="{Binding SenderAddressCard}"
                    IsSearchingByWebService="{Binding IsSearchingByWebService}"
                    SearchByAddressNumberCommand="{Binding SearchByAddressNumberCommand}"
                    RegisterAddressCommand="{Binding RegisterAddressCommand}"
                    DeleteAddressCommand="{Binding DeleteAddressCommand}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
